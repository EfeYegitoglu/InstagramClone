<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:id="@+id/deneme_findUser_Layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/deneme_user_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_image"
            app:civ_border_color="#C5C5C5"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/deneme_userName"
            android:layout_toEndOf="@+id/deneme_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/deneme_Name"
            android:layout_toEndOf="@+id/deneme_user_photo"
            android:layout_below="@+id/deneme_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#878686"
            android:textSize="13dp"
            android:textStyle="bold"
            />


    </RelativeLayout>
</LinearLayout>
