<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_cardView_other"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:background="@color/arkaPlan"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/open_camera"
                android:layout_alignParentLeft="true"
                android:layout_width="25dp"
                android:layout_height="31dp"
                android:background="@drawable/icon_camera"/>
            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8.5dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:background="@drawable/instagram_logo"
                android:layout_toEndOf="@+id/open_camera"/>
            <ImageView
                android:id="@+id/go_DM"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_direct_message"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    
    <androidx.core.widget.NestedScrollView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_margin="5dp"
                android:id="@+id/recylerStory"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_Rec"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>











</LinearLayout>