<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:background="@color/istek"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/paylasimPhoto"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7.5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_image"
            app:civ_border_color="#C5C5C5"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/paylasimUserName"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:layout_margin="11dp"
            android:text="userName"
            android:layout_toEndOf="@+id/paylasimPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/paylasimOptions"
            android:layout_margin="12dp"
            android:src="@drawable/ic_action_options_point"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/PostImage"
        android:scaleType="fitXY"
        android:background="@color/istek"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <RelativeLayout
        android:background="@color/istek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/paylasimBegen"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_action_unlike"
            android:layout_alignParentLeft="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/paylasimYorum"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/paylasimBegen"
            android:src="@drawable/comment"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/paylasimGonder"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/paylasimYorum"
            android:src="@drawable/icon_direct_message"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/paylasimKaydet"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/kaydet"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/paylasimBegeniSayisi"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="3.199 beğenme"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/paylasimBegen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/paylasimYorumName"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="userName"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_below="@+id/paylasimBegeniSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/paylasimAciklama"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/paylasimYorumName"
            android:text="işvlkmfdişlkvnsipvfnisbvnioslvdboüğvnüsvbnkv"
            android:layout_below="@+id/paylasimBegeniSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/paylasimYorumGor"
            android:text="300 Yorumun tamamını gör"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/paylasimYorumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>
