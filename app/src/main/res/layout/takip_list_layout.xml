<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/istek"
    android:id="@+id/takip_list">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/takip_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/profile_image"
        app:civ_border_color="#ACABAB"
        app:civ_border_width="1dp" />


    <TextView
        android:id="@+id/takip_userName"
        android:layout_toEndOf="@+id/takip_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorAccent"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/takip_user_Name"
        android:layout_toEndOf="@+id/takip_photo"
        android:layout_below="@+id/takip_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#878686"
        android:textSize="13dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/takip_btn"
        android:layout_marginRight="10dp"
        android:layout_marginTop="22.5dp"
        android:layout_toStartOf="@+id/takip_options"
        android:background="@drawable/button_profile_background"
        android:text="Takip"
        android:textAllCaps="false"
        android:layout_width="110dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/takip_options"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_action_options_point"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</RelativeLayout>
