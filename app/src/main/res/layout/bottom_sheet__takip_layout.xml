<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/sheet"
    android:background="@drawable/sheet_back">






    <TextView
        android:text="Yakın Arkadaşlar Listesine Ekle                 >"
        android:padding="12dp"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Bildirimler                                                       >"
        android:padding="12dp"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Sessize Al"
        android:padding="12dp"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Kısıtla                                                              >"
        android:padding="12dp"
        android:textColor="@color/colorAccent"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/takibi_bırak"
        android:text="Takibi Bırak"
        android:padding="10dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
